<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aptitudefitnesstracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.Session"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeWhite">
        <activity
            android:name=".presentation.SettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".presentation.SignupActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.AddRoutineActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.EditRoutineActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.RoutineListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ExerciseListActivity"
            android:label="@string/app_name"
            android:parentActivityName=".presentation.RoutineListActivity" />
        <activity
            android:name=".presentation.EditExerciseActivity"
            android:label="@string/app_name"
            android:parentActivityName=".presentation.ExerciseListActivity" />
    </application>
</manifest>