<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aptitudefitnesstracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".presentation.Presenter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeWhite">
        <activity
            android:name=".presentation.activities.SettingActivity"
            android:label="@string/app_name" />
        <!-- <activity android:name=".presentation.activities.ResetPasswordActivity"></activity> -->
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activities.SignupActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.activities.DatabaseTestActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.activities.AccountActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.activities.RoutineListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presentation.activities.ExerciseDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".presentation.activities.RoutineListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aptitudefitnesstracker.presentation.activities.RoutineListActivity" />
        </activity>
    </application>
</manifest>